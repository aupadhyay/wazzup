    "db:push": "pnpm --filter @thoughts/db exec drizzle-kit push",
    "db:studio": "pnpm --filter @thoughts/db exec drizzle-kit studio",
    "db:check": "pnpm --filter @thoughts/db exec drizzle-kit check",
    "build:rpc": "pnpm --filter @thoughts/rpc build",
    "build:all": "pnpm build:rpc && pnpm --filter @thoughts/desktop build",
    "pipeline:run": "pnpm --filter @thoughts/pipeline exec tsx index.ts",
    "pipeline:reset": "pnpm --filter @thoughts/pipeline exec tsx index.ts --reset",
